{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "Node", // ✅ Use Node resolution, not "bundler"
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".", // ✅ Needed for "paths" to work properly
    "paths": {
      "@/*": ["resources/js/*"],
      "ziggy-js": ["vendor/tightenco/ziggy"]
    }
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
    "resources/js/**/*.d.ts"
  ]
}
